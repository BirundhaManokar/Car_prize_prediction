from flask import Flask, render_template_string, request

app = Flask(__name__)

def predict_price(company, car_name, year, mileage):
    
    base_price = 20000  
    if company == "Toyota":
        base_price += 5000
    elif company == "Ford":
        base_price += 3000
    elif company == "BMW":
        base_price += 10000

    if car_name == "Corolla":
        base_price += 3000
    elif car_name == "Mustang":
        base_price += 8000
    elif car_name == "M3":
        base_price += 15000

    if year == "2022":
        base_price += 10000
    elif year == "2020":
        base_price += 5000
    elif year == "2018":
        base_price += 2000

    
    if mileage == "10000":
        base_price -= 1000
    elif mileage == "50000":
        base_price -= 3000
    elif mileage == "100000":
        base_price -= 5000

    return base_price

@app.route('/', methods=['GET', 'POST'])
def home():
    if request.method == 'POST':
       
        company = request.form['company']
        car_name = request.form['car_name']
        year = request.form['year']
        mileage = request.form['mileage']

        
        predicted_price = predict_price(company, car_name, year, mileage)
        return render_template_string(HTML_TEMPLATE, predicted_price=predicted_price)

    return render_template_string(HTML_TEMPLATE, predicted_price=None)

